{
  "name": "horse-racing-app",
  "version": "1.0.0",
  "description": "A horse racing app built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Debashis Kar Suvra",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "electron-router": "^0.5.1",
    "mongoose": "^7.1.0"
  },
  "devDependencies": {
    "electron": "^24.1.3",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "productName": "Horse Racing App",
    "appId": "com.example.horse-racing-app",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "win": {
